@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
} 

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6"> 
            <h2 class="text-primary"> Student List </h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; New Enroll</a>
        </div>
    </div>



<table class="table table-bordered table-striped" style="width:100%">
<thead>
<tr>
<th style="font-size: 25px; border-bottom: 2px; border-color: crimson;">Title</th>
<th style="font-size: 25px; border-bottom: 2px; border-color: crimson;">ISBN</th>
<th style="font-size: 25px; border-bottom: 2px; border-color: crimson;">Author</th>
<th style="font-size: 25px; border-bottom: 2px; border-color: crimson;">Price</th>
<th style="font-size: 25px; border-bottom: 2px; border-color: crimson;">Category</th>
</tr>
</thead>

<tbody>
    @foreach(var items in Model){
        <tr>
            <td >
                @items.Title
            </td>
             <td >
                @items.ISBN
             </td>
            <td >
                @items.Author
            </td>         
            <td >
                @items.Price
            </td>
            <td >
            </td>
           
            <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@items.Id"><i class="bi bi-pencil-square"></i>Edit</a></td>
                    <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@items.Id"><i class="bi bi-trash3-fill"></i>Delete</a></td>
        </tr>
    }
</tbody>

</table>
</div>